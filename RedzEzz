-- Redz Ezz Hub Loader Script if game:GetService("CoreGui"):FindFirstChild("RedzEzzLoader") then return end

local gui = Instance.new("ScreenGui", game:GetService("CoreGui")) gu gui.Name = "RedzEzzLoader" gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui) frame.Size = UDim2.new(0, 300, 0, 150) frame.Position = UDim2.new(0.5, -150, 0.5, -75) frame.BackgroundColor3 = Color3.fromRGB(0, 85, 255) frame.BorderSizePixel = 0 frame.AnchorPoint = Vector2.new(0.5, 0.5) frame.BackgroundTransparency = 0.1

local corner = Instance.new("UICorner", frame) corner.CornerRadius = UDim.new(0, 15)

local title = Instance.new("TextLabel", frame) title.Size = UDim2.new(1, 0, 0.3, 0) title.Position = UDim2.new(0, 0, 0, 10) title.Text = "Redz Ezz Hub" title.TextScaled = true title.Font = Enum.Font.GothamBold title.TextColor3 = Color3.fromRGB(255, 255, 255) title.BackgroundTransparency = 1

local loadingText = Instance.new("TextLabel", frame) loadingText.Size = UDim2.new(1, 0, 0.2, 0) loadingText.Position = UDim2.new(0, 0, 0.5, -10) loadingText.Text = "Cargando..." loadingText.TextScaled = true loadingText.Font = Enum.Font.GothamSemibold loadingText.TextColor3 = Color3.fromRGB(200, 200, 255) loadingText.BackgroundTransparency = 1

local logo = Instance.new("ImageLabel", frame) logo.Size = UDim2.new(0, 60, 0, 60) logo.Position = UDim2.new(0.5, -30, 1, -65) logo.BackgroundTransparency = 1 logo.Image = "rbxassetid://13806032962" -- Logo "EZZ" redondo (puedes cambiarlo)

wait(3) -- duración de pantalla de carga

gui:Destroy()

-- Aquí carga el script principal loadstring(game:HttpGet("https://raw.githubusercontent.com/32knvd/RedzEzzhub/main/RedzEzzHub.lua"))()

