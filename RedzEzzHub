-- Redz Ezz Hub
pcall(function()
    _G.AutoAimbot = true

    task.spawn(function()
        while _G.AutoAimbot and task.wait() do
            local plrs = game:GetService("Players")
            local lp = plrs.LocalPlayer
            local chr = lp.Character
            local hum = chr and chr:FindFirstChildOfClass("Humanoid")
            if not (lp and chr and hum) then continue end

            local target = nil
            local shortest = math.huge

            for _,v in pairs(plrs:GetPlayers()) do
                if v ~= lp and v.Character and v.Character:FindFirstChild("HumanoidRootPart") and v.Team ~= lp.Team then
                    local dist = (v.Character.HumanoidRootPart.Position - chr.HumanoidRootPart.Position).Magnitude
                    if dist < shortest then
                        shortest = dist
                        target = v
                    end
                end
            end

            if target then
                chr.HumanoidRootPart.CFrame = CFrame.new(chr.HumanoidRootPart.Position, target.Character.HumanoidRootPart.Position)
            end
        end
    end)

    task.spawn(function()
        for _,v in pairs(game:GetDescendants()) do
            if v:IsA("Decal") or v:IsA("Texture") then
                v.Transparency = 1
            elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then
                v.Enabled = false
            elseif v:IsA("Explosion") then
                v:Destroy()
            end
        end
    end)
end)
